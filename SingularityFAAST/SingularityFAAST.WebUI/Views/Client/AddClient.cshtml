@model SingularityFAAST.Core.Entities.Client

@{
    ViewBag.Title = "AddClient";
}

<h2>Add New Client</h2>

@using (Html.BeginForm())  
{


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label for="Title">Title</label>*@
                @Html.LabelFor(client => client.Title)
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" } )
            </div>
        </div>



        <div class="col-md-4">
            <div class="form-group">
                @*<label for="company">company</label>*@
                @Html.LabelFor(client => client.Company)
                @Html.TextBoxFor(m => m.Company, new { @class = "form-control" } )
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label for="FirstName">First Name</label>*@
                @Html.LabelFor(client => client.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="MiddleInitial">Middle Initial</label>*@
                @Html.LabelFor(client => client.MiddleInitial)
                @Html.TextBoxFor(m => m.MiddleInitial, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="LastName">Last Name</label>*@
                @Html.LabelFor(client => client.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label for="Address1">Address 1</label>*@
                @Html.LabelFor(client => client.Address1)
                @Html.TextBoxFor(m => m.Address1, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="Address2">Address 2</label>*@
                @Html.LabelFor(client => client.Address2)
                @Html.TextBoxFor(m => m.Address2, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="City">City</label>*@
                @Html.LabelFor(client => client.City)
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label for="StateName">State Name</label>*@
                @Html.LabelFor(client => client.StateName)
                @Html.TextBoxFor(m => m.StateName, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="StateCode">State Code</label>*@
                @Html.LabelFor(client => client.StateCode)
                @Html.TextBoxFor(m => m.StateCode, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="County">County</label>*@
                @Html.LabelFor(client => client.County)
                @Html.TextBoxFor(m => m.County, new { @class = "form-control" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label for="CountyFIPS">CountyFIPS</label>*@
                @Html.LabelFor(client => client.CountyFIPS)
                @Html.TextBoxFor(m => m.CountyFIPS, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="Zip">Zip</label>*@
                @Html.LabelFor(client => client.Zip)
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="Email">Email</label>*@
                @Html.LabelFor(client => client.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @*<label for="CellPhone">Cell Phone</label>*@
                @Html.LabelFor(client => client.CellPhone)
                @Html.TextBoxFor(m => m.CellPhone, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @*<label for="HomePhone">Home Phone</label>*@
                @Html.LabelFor(client => client.HomePhone)
                @Html.TextBoxFor(m => m.HomePhone, new { @class = "form-control" })
