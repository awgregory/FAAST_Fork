@model IEnumerable<SingularityFAAST.Core.DataTransferObjects.LoansClientsInventoryDTO>

@{
    ViewBag.Title = "CheckInRenewal";

}

<h3>Enter Outcomes of Prior Loan</h3>


@using (Html.BeginForm("CheckInRenewal", "Loan", FormMethod.Post, new { @class = "" }))
{


    <div>
        <hr />
        @*--------------Client Info Section Below -------------------------------------------------*@
        <div class="row">
            <h5>
                @foreach (var item in Model)
                {
                    <span class="col-md-4">Client: @item.FirstName @item.LastName, Loan# @item.LoanNumber</span>

                    break; //or will print client for each item in client loan
                }
            </h5>
        </div>
        <br />


        @*Need to do this section like EditClient for the Disabilities,  OR BYPASS listing?*@

        @*------------List of Items on Loan Section Below -----------------------------------------------*@

        @*Table -----------------------------------------------------------------------*@

        <div class="row">
            <br />

            <table class="table table-striped">
                <tr>

                    <th>Item Number</th>
                    <th>Item Name</th>
                    <th>End Date</th>
                    <th>Damages</th>

                    <th>View/Edit</th>  @*To make th width match data*@
                    <th>Delete</th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.InventoryItemId</td>
                        <td>@item.ItemName</td>
                        <td>@item.LoanDate.AddDays(29).ToString("MMMM dd, yyyy")</td>

                        <td><input type="text" name="Damages" id="damages" value="@item.Damages" /></td>
                        @*<td>@Html.TextBoxFor(@item => item.Damages, new { @class = "form-control" })</td>*@

                        <td>@Html.ActionLink("View/Edit", "EditClient", new { id = item.InventoryItemId })</td>
                        <td>@Html.ActionLink("Delete", "Delete", new { id = item.InventoryItemId })</td>
                    </tr>
                }
            </table>
        </div>

        @*-----------Client Outcome Section Below -----------------------------------------------------------------------*@

        <br />

        <div class="row">
            <div class="col-md-4" id="decision">
                <h5>Client Outcome</h5>
                <div class="radio">
                    <label><input type="radio" name="clientOutcome" value="AT will meet needs">AT will meet needs</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="clientOutcome" value="Non-Respondant">Non-Respondant</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="clientOutcome" value="No decision made">No decision made</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="clientOutcome" value="AT will not meet needs">AT will not meet needs</label>
                </div>
            </div>


            <div class="col-md-8">
                <div class="form-group">
                    <label for="notes">Loan Notes:</label>
                    <input type="text" name="LoanNotes" id="notes" />
                </div>
            </div>
        </div>
        <br />



        <div class="form-group">

            <input type="submit" value="Continue" class="btn btn-primary" />

        </div>
    </div>

}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

