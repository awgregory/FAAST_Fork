    ViewBag.Title = "RenewItems";
}

<h2>RenewItems</h2>

<div>
    <h4>Loan</h4>
    <hr />
    
    Loan: #---- @Html.DisplayFor(model => model.LoanNumber)  Otero, Jeanette

    <dl class="dl-horizontal">
        <dt>
            Item ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryItemId)
        </dd>

        <dt>
            Item Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            Manufacturer
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>

