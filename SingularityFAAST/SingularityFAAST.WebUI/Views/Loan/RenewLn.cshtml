@model SingularityFAAST.WebUI.Models.Loan

@{
    ViewBag.Title = "RenewLn";
}

<!DOCTYPE html>
@*View Devices in Loan should go to its own page that lists each item with the ability to renew individually *@
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>ManageLoans</title>
    </head>
    <body>
    <div class="container">
        <br />
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="col-md-offset-4">Renew Loan</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-5 col-md-offset-3">
                        Would you like to renew all items in this loan for 30 days?
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        @Html.ActionLink("Renew All", "", null, new {@class = "btn btn-primary"})
                    </div>
                </div>
                <br/>
                <div class="row">
                    <div class="col-md-5 col-md-offset-4">
                        @Html.ActionLink("View Devices In Loan", "", null, null)
                    </div>
                </div>
                <br/>
                <br/>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        @Html.ActionLink("Cancel", "", null, new {@class = "btn btn-primary"})
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

