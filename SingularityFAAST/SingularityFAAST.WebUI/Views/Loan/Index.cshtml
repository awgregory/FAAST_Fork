@model IEnumerable<SingularityFAAST.Core.DataTransferObjects.LoansClientsInventoryDTO>

@{
    ViewBag.Title = "Loan";
}


@*<div class="row">*@   @*add class (makes body content + column into a single row) here to create two-column page for upcoming due loans *@
@*This will be column for upcoming due loans, and past due loans*@

<h2>Manage Loans</h2>
@*<div class="col-md-4 col-md-offset-4"></div>*@  @*This was to center the title*@
<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @Html.ActionLink("Create New Loan", "AddLoan", null, new {@class = "btn btn-primary"})
        </div>
        @using (Html.BeginForm("Index", "Loan", FormMethod.Post, new {@class = "form-inline"}))
        {
            <div class="col-md-3">
                <input type="text" class="form-control"  name="searchby" placeholder="Search by Client Last Name"/>   @**@
                <input type="submit" class="btn btn-primary"  name="byName"value='Search'/>
            </div>
            <div class="col-md-3">
                <input type="text" class="form-control"  name="searchbynum" placeholder="Search by Loan Number"/>  @*name="searchbyNum"*@
                <input type="submit" class="btn btn-primary" name="byNum" value="Search"/>
            </div>
        }

        @*Remove edit, renew, cancel and put on details page*@
    </div>
    <hr />
    <br />
    <div class="col-md-12">
        <div class="row">
            <div class="col-sm-3">
                <i class="fa fa-search-plus fa-lg"></i>  Select any loan to edit, renew or cancel.
                <i class="fa fa-check fa-lg"></i>  Select any active loan to check-in.
            </div>
            <div class="btn-group">
                @*@using (Html.BeginForm("Index", "Home", FormMethod.Post)) { }*@

                @*@* If logic here. If radio button is true on select of these buttons, pass item.loanNum. *@
                @*</div>*@
                @*<div class="col-md-2">*@
                @*@Html.ActionLink("Renew Loan", "RenewLoan", null, new { @class = "btn btn-default" }) @*RenewLoan*@
                @*</div>*@
                @*<div class="col-md-2">*@
                @*@Html.ActionLink("Cancel Loan", "CancelLn", null, new { @class = "btn btn-default" }) @*CancelLoan*@
                @*</div>*@
                @*<div class="col-md-2">*@
                @*@Html.ActionLink("Edit Loan", "EditLn", null, new { @class = "btn btn-default" }) @*EditLoan*@
                @*</div>*@
                @*<div class="col-md-2">*@
                @*@Html.ActionLink("Check-In Loan", "CheckIn", null, new { @class = "btn btn-default" }) @*CheckinLoan*@ @*To record client outcome, damages etc.*@
                @*</div>*@

            </div>
        </div>
        <br />
        @*<div class="container-fluid">*@
        <div class="row">
            <br />
            <div class="col-md-8">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>
                                Select
                            </th>
                            <th>
                                Loan Number
                            </th>
                            <th>
                                Date Created
                            </th>
                            <th>
                                Client ID
                            </th>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                                @*@Html.ActionLink("Loan End Date", "IndexLoan", new { sort = ViewBag.DateSortParm })*@
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @using (Html.BeginForm("RenewItems", "Loan", FormMethod.Post, new {@class = "form-inline"}))
                                        {
                                            <input type="hidden" value="@item.LoanNumber" name="LoanNumber"/>
                                            <button type="submit" style= "float: left"><i class="fa fa-search-plus fa-md"></i></button>
                                        }
                                    @if (item.IsActive)
                                        {
                                            using (Html.BeginForm("CheckIn", "Loan", FormMethod.Post, new {@class = "form-inline"}))
                                            {
                                             <input type="hidden" value="@item.LoanNumber" name="LoanNumber"/>
                                             <button type="submit" style="float: none"><i class="fa fa-check fa-md"></i></button>
                                            }
                                        } 
                                </td>
                                <td>
                                    12L-@item.LoanNumber
                                </td>
                                <td>
                                    @item.DateCreated.ToString("MMMM dd, yyyy")
                                </td>
                                <td>
                                    @item.ClientId
                                </td>
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="Index.cshtml">< Previous 10 </a> @*use bootstrap pagination here*@
                <a href="Index.cshtml">| Next 10 ></a>
            </div>

            @*@*<div class="col-md-2 col-sm-3 hidden-xs">*@
            @*Placeholder - keep empty*@
            @*</div>*@

            <div class="col-md-4">
                <div class="sidebar">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Loans Due This Week</h3>   @*Could this be devices due?*@
                            @*<div class="navbar-collapse navbar-right collapse">*@
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            Loan Number
                                        </th>
                                        <th>
                                            Date Due
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    var dateDue = item.DateCreated.AddDays(28);
                                    var dateC = item.DateCreated;

                                    if (dateDue <= DateTime.Now.AddDays(7) && dateDue >= DateTime.Now)
                                    {
                                        <tr>
                                            <td>@item.LoanNumber</td>
                                            <td>@item.DateCreated.AddDays(28).ToString("MMMM dd")</td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>