@model IEnumerable<SingularityFAAST.Core.DataTransferObjects.LoansClientsInventoryDTO>

@{
    ViewBag.Title = "Loan";
}


@*<div class="row">*@   @*add class (makes body content + column into a single row) here to create two-column page for upcoming due loans *@
@*This will be column for upcoming due loans, and past due loans*@

<h2>Manage Loans</h2>
@*<div class="col-md-4 col-md-offset-4"></div>*@  @*This was to center the title*@
<br />

<div class="container-fluid">
    <div class="row">
        @using (Html.BeginForm("Index", "Loan", FormMethod.Post, new { @class = "form-inline" }))
            {
            <div class="col-md-3">
                <input type="text" class="form-control" name="searchby" placeholder="Search by Client Last Name" />
                <input type="submit" class="btn btn-primary" value="Search" />
            </div>
        }

        @using (Html.BeginForm("Index", "Loan", FormMethod.Post, new { @class = "form-inline" }))
            {
            <div class="col-md-3">
                <input type="text" class="form-control" name="searchby" placeholder="Search by Loan Number" />
                <input type="submit" class="btn btn-primary" value="Search" />
            </div>
        }

        @Html.ActionLink("Create New Loan", "AddLoan", null, new { @class = "btn btn-primary" }) @*NewLoan*@
    </div>
    <hr />
    <br />
    <div class="col-md-11">
        <div class="row">
            <div class="col-md-3">
                Select any loan to edit, renew or cancel.
            </div>
            <div class="btn-group">

                @* If logic here. If radio button is true on select of these buttons, pass item.loanNum. *@
                @*</div>*@
                @*<div class="col-md-2">*@
                @Html.ActionLink("Renew Loan", "RenewLoan", null, new { @class = "btn btn-default" }) @*RenewLoan*@
                @*</div>*@
                @*<div class="col-md-2">*@
                @Html.ActionLink("Cancel Loan", "CancelLn", null, new { @class = "btn btn-default" }) @*CancelLoan*@
                @*</div>*@
                @*<div class="col-md-2">*@
                @Html.ActionLink("Edit Loan", "EditLn", null, new { @class = "btn btn-default" }) @*EditLoan*@
                @*</div>*@
                @*<div class="col-md-2">*@
                @Html.ActionLink("Check-In Loan", "CheckIn", null, new { @class = "btn btn-default" }) @*CheckinLoan*@ @*To record client outcome, damages etc.*@
                @*</div>*@

            </div>
        </div>
        <br />
        @*<div class="container-fluid">*@
        <div class="row">
            <br />
            <div class="col-md-9">
                <table class="table table-striped table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>
                                Select
                            </th>
                            <th>
                                Loan Number
                            </th>
                            <th>
                                Date Created
                            </th>
                            <th>
                                Client ID
                            </th>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                                @*@Html.ActionLink("Loan End Date", "IndexLoan", new { sort = ViewBag.DateSortParm })*@
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @*@Html.ActionLink("Select", "", new {id = item.LoanId}) *@ @*Could be checkbox. Not a link, just selects, for one of three possible functions*@
                                    @*@Html.RadioButtonFor(s=> s.LoanNum, item.LoanNumber)*@ @*replace with large icon?
                                        @@Html.Hidden(item.LoanNumber) @*will want ajax because true/false value is passed to above before being passed to controller*@
                                    X
                                </td>
                                <td>
                                    @item.LoanNumber
                                </td>
                                <td>
                                    @item.DateCreated.ToString("MMM dd yyyy")
                                </td>
                                <td>
                                    @item.ClientId
                                </td>
                                <td>
                                    @item.FirstName
                                </td>
                                <td>
                                    @item.LastName
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="Index.cshtml">< Previous 10 </a> @*use bootstrap pagination here*@
                <a href="Index.cshtml">| Next 10 ></a>
            </div>

            @*@*<div class="col-md-2 col-sm-3 hidden-xs">*@
            @*Placeholder - keep empty*@
            @*</div>*@

            <div class="col-md-3">
                <div class="sidebar">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Upcoming Devices Due </h3>
                            @*<div class="navbar-collapse navbar-right collapse">*@
                        </div>
                        <div class="panel-body">
                            <table class="table table-striped table-hover table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            Days Due In
                                        </th>
                                        <th>
                                            Loan Number
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>3</td>
                                        <td>2234</td>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>