@{
    ViewBag.Title = "Edit Item";
}

<h1>Edit Inventory Item</h1>

<form>
    <div class="row">

        <div class="col-md-3">
            @*Item Name*@
            <div class="form-group">
                <label for="ItemName">Item Name</label>
                <Input type="text" class="form-control" id="ItemName">
            </div>

            @*Inventory Number*@
            <div class="form-group">
                <label for="InventoryNumber">Inventory Number</label>
                <Input type="text" class="form-control" id="InventoryNumber">
            </div>

            @*Serial Number*@
            <div class="form-group">
                <label for="ItemNumber">Item Number</label>
                <Input type="text" class="form-control" id="ItemNumber">
            </div>

            @*Retail Cost*@
            <div class="form-group">
                <label for="RetailCost">Retail Cost</label>
                <Input type="text" class="form-control" id="RetailCost">
            </div>

            @*Cost Paid*@
            <div class="form-group">
                <label for="CostPaid">Cost Paid</label>
                <Input type="text" class="form-control" id="CostPaid">
            </div>

            @*Location*@
            <div class="form-group">
                <label for="Location">Location</label>
                <select class="form-control" id="Location">
                    <option>Jacksonville</option>
                    <option>Tampa</option>
                    <option>Gainesville</option>
                    <option>Miami</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            @*Category*@
            <div class="form-group">
                <label for="Category">Category</label>
                <select class="form-control" id="Category">
                    <option disabled selected value> -- select and option -- </option>
                    <option>Hearing</option>
                    <option>Eyesight</option>
                    <option>Technology</option>
                    <option>Toys</option>
                    <option>Communication/Speech</option>
                </select>
            </div>

            @*Purchase Date*@
            <div class="form-group">
                <label for="PurchaseDate">Purchase Date</label>
                <Input type="text" class="form-control" id="PurchaseDate">
            </div>

            @*Description*@
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea rows="4" class="form-control" id="Description"></textarea>
            </div>
        </div>

        <div class="col-md-2">
            @*Accessories*@
            <div class="form-group">
                <label for="Accessories">Accessories</label>
                <textarea rows="4" class="form-control" id="Accessories"></textarea>
            </div>

            @*Additional Files
    <div class="form-control">
        <label for ="AdditionalFiles">Additional Files</label>
    </div>*@
        </div>
    </div>

    

    <div>
        @Html.ActionLink("Update Item", "UpdateInventoryItem", null, new { @class = "btn btn-primary" })
        <br/>
        <br/>
        @* need to add delete functionality *@
        @*@Html.ActionLink("Delete Item", "MethodAddNewItem", null, new { @class = "btn btn-danger btn-sm" })*@
    </div>
</form>