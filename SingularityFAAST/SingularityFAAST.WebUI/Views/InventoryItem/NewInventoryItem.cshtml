    Hope Haven - FAAST Inventory System
    Jonathan Ebert *@

@model SingularityFAAST.Core.ViewModels.InventoryItemsViewModel

@{
    ViewBag.Title = "NewInventoryItem";
}

<h1>New Item</h1>
<br />

@* ToolTips were added to the form to show the user what is required. *@
@using (Html.BeginForm())
{
    @* Main Form Div *@
    <div class="row">
        @* First Column *@
        <div class="col-md-3">
            @* Item Name *@
            <div class="form-group">
                <label for="ItemName"><a data-toggle="tooltip" data-placement="bottom" title="Required">Item Name *</a></label>
                <Input type="text" class="form-control" id="ItemName" required>
            </div>

            @* Inventory Number *@
            <div class="form-group">
                <label for="InventoryNumber">Inventory Number</label>
                <a data-toggle="tooltip" data-placement="bottom" title="This has been entered for you.">
                    <Input disabled="disabled" type="text" class="form-control" value="@Model.ReturnNextInventoryNumber" id="InventoryNumber">
                </a>
            </div>

            @* Serial Number *@
            <div class="form-group">
                <label for="ItemNumber">SerialNumber</label>
                <Input type="text" class="form-control" id="SerialNumber">
            </div>

            @* Retail Cost *@
            <div class="form-group">
                <label for="RetailCost"><a data-toggle="tooltip" data-placement="bottom" title="Required">Retail Cost</a></label>
                <Input type="text" class="form-control" id="RetailCost" placeholder="ex. 100.00">
            </div>

            @* Cost Paid *@
            <div class="form-group">
                <label for="CostPaid"><a data-toggle="tooltip" data-placement="bottom" title="Required">Cost Paid</a></label>
                <Input type="text" class="form-control" id="CostPaid" placeholder="ex. 100.00">
            </div>

            @* Model Name *@
            <div class="form-group">
                <label for="ModelName">Model Name</label>
                <Input type="text" class="form-control" id="ModelName">
            </div>

            @* Location *@
            <div class="form-group">
                <label for="Location">Location</label>
                <select class="form-control" id="Location">
                    <option>Jacksonville</option>
                    <option>Tampa</option>
                    <option>Gainesville</option>
                    <option>Miami</option>
                </select>
            </div>
        </div>
        @* Second Column *@
        <div class="col-md-3">
            @* Category *@
            <div class="form-group">
                <label for="Category"><a data-toggle="tooltip" data-placement="bottom" title="Required">Category *</a></label>
                <select class="form-control" id="InventoryCategoryId" required>
                    <option disabled selected> -- select and option -- </option>
                    <option value="1">Computers and Related Technology</option>
                    <option value="2">Daily Living</option>
                    <option value="3">Environmental Adaptations</option>
                    <option value="4">Hearing</option>
                    <option value="5">Learing, Cognition, and Development</option>
                    <option value="6">Mobility, Seating, and Positioning</option>
                    <option value="7">Recreational, Sports, and Leisure</option>
                    <option value="8">Speech Communication</option>
                    <option value="9">Vehicle Mods and Transport</option>
                    <option value="10">Vision</option>
                </select>
            </div>

            @* Purchase Date *@
            <div class="form-group">
                <label for="DatePurchased"><a data-toggle="tooltip" data-placement="bottom" title="Required">Date Purchased *</a></label>
                <Input type="datetime" class="form-control" id="DatePurchased" placeholder="ex. mm/dd/yyyy" required>
            </div>

            @* Description *@
            <div class="form-group">
                <label for="Description">Description</label>
                <textarea rows="4" class="form-control" id="Description"></textarea>
            </div>

            @* Availability *@
            <div class="form-group">
                <label for="Availability"><a data-toggle="tooltip" data-placement="bottom" title="Required">Availability *</a></label>
                <div class="radio radio-inline">
                    <label><input type="radio" name="Available" id="1" checked="checked" />Yes</label>
                    <label><input type="radio" name="Available" id="0" />No</label>
                </div>
            </div>

            @* Active *@
            <div class="form-group">
                <label for="Active">Active</label>
                    <div class="radio radio-inline">
                        <label><input type="radio" name="Active" id="1" checked="checked"/>Yes</label>
                        <label><input type="radio" name="Active" id="0" />No</label>
                    </div>
            </div>

        </div>
        @* Third Column *@
        <div class="col-md-2">
        @* Accessories *@
            <div class="form-group">
                <label for="Accessories">Accessories</label>
                <textarea rows="4" class="form-control" id="Accessories"></textarea>
            </div>

        @* Damages *@
            <div class="form-group">
                <label for="Damages">Damages</label>
                <textarea rows="4" class="form-control" id="Damages"></textarea>
            </div>

        @*@*Additional Files
            <div class="form-control">
                <label for="AdditionalFiles">Additional Files</label>
            </div>*@
        </div>
    </div>

    @* Buttons: Submit & Cancel *@
    <div>
        <br />
        <br />
        @* Submit Button *@
        <button class="btn btn-primary" type="submit">Create Item</button>
        <br />    


        @* message displays back to user when there are errors with the login *@
        @Html.ValidationSummary(true, "Uh Oh! An Error Occurred:", new { @class = "alert alert-warning" })  @* Have Not Checked for Accurate Location on web page yet *@
        <br />


        @Html.ActionLink("Cancel Entry", "IndexInventory", "InventoryItem", null, new { @class = "btn btn-warning btn-sm" })
    </div>

    @* Script for ToolTip *@
    <script>
        $(document).ready(function ()
        {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}